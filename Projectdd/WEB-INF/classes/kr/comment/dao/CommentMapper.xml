<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><!-- mapper태그에 dtd를정의했기에 mapper의 태그이름을 바꾸면 안된다 -->
<mapper namespace="kr.comment.dao.CommentMapper"> <!-- 패키지이름 + 파일이름 경로가 아닌 이름이기에 /가 아닌 .을 붙인 것 -->
  
  <!--  게시판 전체 리스트를 가져오는 SQL -->
  <!-- 해당 SQL을 메소드와 연결해서 처리. id : 메소드명, resulttype : return, parameter type : 매개변수 -->
  <select id = "commAllList" resultType = "kr.comment.entity.Comment" parameterType='int'><!-- id : DAO의 메소드이름 -->
    <!-- 게시판 번호에 맞는 댓글만 보여준다 -->
    select COMM_CMT_SEQ,COMM_CMT_CONTENT,MB_ID from TBL_COMM_COMMENT WHERE COMM_SEQ = #{comm_seq}
  </select>
    <insert id = "commWrite" parameterType="kr.comment.entity.Comment">
	  INSERT INTO TBL_COMM_COMMENT (COMM_CMT_SEQ,COMM_SEQ,COMM_CMT_CONTENT,COMM_CMT_DATE,MB_ID)
	  values (TBL_COMM_COMMENT_SEQ.nextval,#{comm_seq},#{comm_cmt_content},SYSDATE,'mb_id 05')
    </insert>
    <delete id = "commDelete" parameterType='int'>
      Delete from TBL_COMM_COMMENT where COMM_SEQ = #{comm_seq}
    </delete>
</mapper>
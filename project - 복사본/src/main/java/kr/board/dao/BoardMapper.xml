<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.board.dao.BoardMapper">
 
 <!-- 게시판 전체리스트를 가져오는 SQL-->
 <select id="allList" resultType="kr.board.entity.Board">
 	select * from tbl_member
 </select>
  <select id="boardWrite" parameterType="kr.board.entity.tbl_member">
 	insert into tbl_member(mem_id,mem_pw,mem_name,mem_email)
 	values(#{mem_id},#{tbl_pw},#{mem_name},#{mem_email})
 </select>
 <delete id="boardDelete" parameterType="String"> 
 	delete from tbl_member where mem_id=#{mem_id}
 </delete>
 <select id="boardView" resultType="kr.board.entity.tbl_member"> 
 	select * from tbl_member where mem_id=#{mem_id}
 </select>
 <update id="boardUpdate" parameterType="kr.board.entity.tbl_member">
 	update tbl_member set mem_pw=#{mem_pw},mem_name=#{mem_name},<!-- 목표금액 --> where mem_id=#{mem_id}
 </update>
</mapper>
